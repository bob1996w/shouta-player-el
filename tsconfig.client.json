{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/*"]
        },
        "noEmit": true,
        "jsx": "react",
        "esModuleInterop": true,
    },
    "include": [
        "src/client/**/*",
        "src/shared/**/*"
    ]
}